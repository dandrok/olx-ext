{
  "manifest_version": 3,
  "name": "Click to run",
  "description": "Runs a script when the user clicks the action toolbar icon.",
  "version": "1.0",
  "icons": {
    "16": "images/16-s.png",
    "32": "images/32-s.png",
    "48": "images/48-s.png",
    "128": "images/128-s.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.olx.pl/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/16-s.png",
      "32": "images/32-s.png",
      "48": "images/48-s.png",
      "128": "images/128-s.png"
    },
    "default_popup": "popup.html"
  },

  "permissions": ["scripting", "tabs", "storage"]
}
